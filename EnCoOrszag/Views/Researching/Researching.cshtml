<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 10px;
            align-items: center;
            align-content: center;
        }
    </style>
</head>

@model List<EnCoOrszag.ViewModell.ResearchingViewModel>

@{
    ViewBag.Title = "Researching";
}

<h2>Researching</h2>
<table>
    <tr>
        <th>Name</th>
        <th>Time remeaning</th>
        <th>Cancel research</th>
    </tr>
    
        @foreach (var item in Model)
        {
            using (Html.BeginForm("CancelResearch","Researching",FormMethod.Post))
            { 
                <tr>
                    <td>@item.Name</td>
                    <td><progress value=@item.TurnsLeft max=@item.WholeTime></progress> (@item.TurnsLeft/@item.WholeTime turns)</td>
                    <td><input type="submit" name="cancel" value="Cancel" /></td>
                    @Html.HiddenFor(m => m.Single(k => k.Id == item.Id).Id)
                </tr>    
            }
    }
</table>
